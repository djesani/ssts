<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Mandir Trivia - KBC Style</title>
  <style>
    .progress-container {
      width: 100%;
      height: 30px;
      background-color: #eee;
      border-radius: 5px;
      overflow: hidden;
      margin: 50px auto;
      max-width: 500px;
    }

    .progress-bar {
      height: 100%;
      width: 0%;
      background-color: green;
      transition: width 0.1s linear;
    }

    body {
      font-family: 'Poppins', sans-serif;
      text-align: center;
      background-image: url('https://limesdigital.com/wp-content/uploads/2025/05/Trivia-Background-scaled.webp');
      background-repeat: no-repeat;
      background-size: cover;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      height: 100vh;
      align-items: flex-start;
    }

    #title {
      font-size: 60px;
    }

    .container {
      max-width: 600px;
      text-align: center;
      box-shadow: 0 0 0px gold;
    }

    .trivia {
      margin-top: 70px;
      padding-top: 10px;
      border-radius: 130px;
      background: #eff4f4;
      width: 90%;
      padding-left: 60px;
      padding-right: 60px;
      padding-bottom: 5px;

    }

    .question {
      font-size: 30px;
      font-weight: bold;
      margin: 20px 0 50px;
      color: #000000;
    }

    #trivia-image {
      max-width: 100%;
      height: auto;
      border-radius: 10px;
    }

    .trivia-title {
      position: relative;
      top: -50px;
      width: 500px;
      z-index: 10;
    }

    .answers {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .answer-option {
      background: linear-gradient(90deg, #EE4F91, #ffea51);
      color: #000000;
      font-size: 30px;
      padding: 20px;
      border-radius: 30px;
      box-shadow: 0 4px 10px rgb(133 102 94);
      text-transform: titlecase;
      font-weight: bold;
      transition: transform 0.3s ease;
      pointer-events: none;
    }

    .answer-option:hover {
      transform: scale(1.05);
    }

    @keyframes flash {

      0%,
      100% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.1);
      }
    }

    .highlight-correct {
      background: linear-gradient(90deg, #1ee664, #04BFDE);
      color: rgb(0, 0, 0);
      animation: flash 0.5s ease-in-out 3;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="trivia">
      <img class="trivia-title" src="https://limesdigital.com/wp-content/uploads/2025/05/Trivia-Title.webp"
        alt="Trivia Title">
      <img id="trivia-image" src="" alt="Trivia Image">
      <div id="question" class="question"></div>
      <div id="answers" class="answers"></div>
      <div class="progress-container">
        <div class="progress-bar" id="progressBar"></div>
      </div>
    </div>
    <script>
      const progressBar = document.getElementById('progressBar');
      const duration = 10000;
      const interval = 100;

      const questions = [
        {
          question: "How many mandirs did Maharaj build?",
          options: ["6", "8", "10"],
          answer: "6",
          image: "https://limesdigital.com/wp-content/uploads/2025/05/temple-image.png"
        },
        {
          question: "Which mandir was not built by Maharaj?",
          options: ["Bhuj", "Gadhada", "Loya"],
          answer: "Loya",
          image: "https://limesdigital.com/wp-content/uploads/2025/05/temple-image.png"
        }
      ];

      function getStoredQuestion() {
        const now = new Date();
        const weekNumber = Math.floor(now / (1000 * 60 * 60 * 24 * 7));
        return questions[weekNumber % questions.length];
      }

      function displayQuestion(questionObj) {
        document.getElementById('question').innerText = questionObj.question;
        document.getElementById('trivia-image').src = questionObj.image;
        const answersDiv = document.getElementById('answers');
        answersDiv.innerHTML = '';

        questionObj.options.forEach(option => {
          const answerDiv = document.createElement('div');
          answerDiv.classList.add('answer-option');
          answerDiv.innerText = option;
          answerDiv.setAttribute('data-answer', option);
          answersDiv.appendChild(answerDiv);
        });

        startProgressBar(questionObj);
      }

      function startProgressBar(question) {
        let progress = 0;
        progressBar.style.width = '0%';
        progressBar.style.backgroundColor = '#68BD46';

        const progressInterval = setInterval(() => {
          progress += interval;
          const percentage = (progress / duration) * 100;
          progressBar.style.width = `${percentage}%`;

          if (percentage >= 66) {
            progressBar.style.backgroundColor = '#EF3A5D';
          } else if (percentage >= 33) {
            progressBar.style.backgroundColor = '#F68827';
          }

          if (progress >= duration) {
            clearInterval(progressInterval);
            revealAnswer(question.answer);
          }
        }, interval);
      }

      function revealAnswer(correctAnswer) {
        const allAnswers = document.querySelectorAll('.answer-option');
        allAnswers.forEach(answer => {
          if (answer.getAttribute('data-answer') === correctAnswer) {
            answer.classList.add('highlight-correct');
          }
        });

        setTimeout(() => displayQuestion(getStoredQuestion()), 3000);
      }

      displayQuestion(getStoredQuestion());
    </script>
</body>

</html>