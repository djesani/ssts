<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Mandir Trivia - KBC Style</title>
  <style>
    * {
      box-sizing: border-box;
    }

    html,
    body {
      font-family: 'Poppins', sans-serif;
      background-image: url('/images/trivia/trivia-background.webp');
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      margin: 0;
      padding: 0;
      height: 100%;
      width: 100%;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    .container {
      width: 80vw;
      height: 95vh;
      padding: 2vh 4vw;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      background: #eff4f4;
      border-radius: 5vw;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .trivia-title {
      width: 60%;
      margin-bottom: 1vh;
    }

    #trivia-image {
      width: 100%;
      height: auto;
      border-radius: 1.5vw;
      margin-bottom: 1vh;
    }

    .question {
      font-size: 5vw;
      font-weight: bold;
      margin: 1.5vh 0;
      color: #000;
    }

    .answers {
      flex: 1 1 auto;
      display: flex;
      flex-direction: column;
      gap: 1vh;
      width: 100%;
      padding-right: 0.5vw;
    }

    .answer-option {
      background: linear-gradient(90deg, #C2185B, #FBC02D);
      color: #fff;
      font-size: 4vw;
      padding: 1em;
      border-radius: 1.5vw;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      font-weight: bold;
      transition: transform 0.3s ease;
      pointer-events: none;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.9);
    }

    .answer-option:hover {
      transform: scale(1.05);
    }

    .progress-container {
      width: 100%;
      height: 2vh;
      background-color: #eee;
      border-radius: 1vh;
      overflow: hidden;
      margin-top: 1vh;
    }

    .progress-bar {
      height: 100%;
      width: 0%;
      background-color: green;
      transition: width 0.1s linear;
    }

    @keyframes flash {

      0%,
      100% {
        transform: scale(1);
      }

      50% {
        transform: scale(1.1);
      }
    }

    .highlight-correct {
      background: linear-gradient(90deg, #00e676, #00b0ff);
      color: #fff;
      animation: flash 0.5s ease-in-out 3;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.9);
    }

    @media (max-width: 768px) {
      .container {
        padding: 2vh 2vw;
        width: 95vw;
      }

      .question {
        font-size: clamp(18px, 3.5vw, 28px);
      }

      .answer-option {
        font-size: clamp(16px, 3vw, 24px);
        padding: 0.8em;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <img class="trivia-title" src="/images/trivia/trivia-title.webp" alt="Trivia Title">
    <img id="trivia-image" src="" alt="Trivia Image">
    <div id="question" class="question"></div>
    <div id="answers" class="answers"></div>
    <div class="progress-wrapper"
      style="display: flex; align-items: center; justify-content: space-between; width: 100%; margin-top: 1vh;">
      <div class="progress-container" style="flex-grow: 1; margin-right: 1vw;">
        <div class="progress-bar" id="progressBar"></div>
      </div>
      <div id="countdown" style="font-size: 1.2em; font-weight: bold; color: #333;">30s</div>
    </div>
  </div>

  <script>
    const progressBar = document.getElementById('progressBar');
    const duration = 30000; // 30 seconds
    const interval = 100;   // update every 0.1s

    const questions = [
