      {
        question: "In which village was Swaminarayan Bhagwan born?",
        options: ["Chhapaiya", "Gadhada", "Loj"],
        answer: "Chhapaiya",
        image: "/images/trivia/trivia (5).jpg"
      },
      {
        question: "What name did Swaminarayan Bhagwan adopt during his travels as a child ascetic?",
        options: ["Nilkanth Varni", "Ghanshyam", "Swaminarayan"],
        answer: "Nilkanth Varni",
