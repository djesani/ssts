      },
      {
        question: "Which scripture did Swaminarayan Bhagwan recommend for daily recitation?",
        options: ["The Vedas", "Vachanamrut", "Shikshapatri"],
        answer: "Shikshapatri",
        image: "/images/trivia/trivia (53).jpg"
      },
      {
        question: "What was the name of the village where Ghanshyam Maharaj spent most of his childhood?",
        options: ["Chhapaiya", "Gadhada", "Loj"],
        answer: "Chhapaiya",
        image: "/images/trivia/trivia (10).jpg"
      },
      {
        question: "What was the birth name of Swaminarayan Bhagwan?",
        options: ["Krishna Bhagwan", "Ghanshyam Maharaj", "Swaminarayan Bhagwan"],
        answer: "Ghanshyam Maharaj",
        image: "/images/trivia/trivia (5).jpg"
      },
      {
        question: "Which murtis are on the right when at the entrance of the mandir?",
        options: [
          "Shiv, Parvati, Ganpati",
