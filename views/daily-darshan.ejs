<!DOCTYPE html>
<html>
  <head>
    <% include partials/header %>

    <script type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
    <% if(renderType === 'photo' ) { %>
      <script src="/galleria/galleria-1.5.7.min.js"></script>
      <script type='text/javascript' src='/javascripts/page.js'></script>
    <% } %>
  </head>
  <body>
    <% include partials/menu %>

    <% if(renderType === 'empty' ) { %>
      <div class="not-found">
      Unable to load album or photos!
      </div>
    <% } %>

    <% if(renderType === 'album' ) { %>
      <div class="container bg-light">
        <div class="row">
      <h2>Albums</h2>
      <ul class="albums">
        <% galleryOutput.forEach(album => { %>
          <li class="thumb">
            <a href="<%= dailyDarshanRoot %>/<%= album.url %>">
              <figure>
                <img src="<%= dailyDarshanRoot %>/<%= album.url %>?tn=1" alt="<%= album.name %>"/>
                <figcaption><%= album.name %></figcaption>
              </figure>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
    <% } %>

    <% if(renderType === 'photo' ) { %>
      <div class="container bg-light">
        <div class="row galleria">
      <% galleryOutput.forEach(photo => { %>
        <img src="<%= dailyDarshanRoot %>/<%= photo.src %>" alt="<%= photo.name %>">
      <% }); %>
      </div>
    </div>
    <% } %>

    <% include partials/footer %>
  </body>
  </html>
