<style>


#wave {
  text-align: center;
  width: 100px;
  height: 100px;
}
#wave .dot {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: red;
}
.grid-image:hover #wave .dot {
  animation: wave 1.3s linear infinite;
}
.grid-image:hover #wave .dot:nth-child(2) {
  animation-delay: -1.1s;
}
.grid-image:hover #wave .dot:nth-child(3) {
  animation-delay: -0.9s;
}
@keyframes wave {
  0%, 60%, 100% {
    transform: initial;
  }
  30% {
    transform: translateY(-15px);
  }
}

</style>


<div id="wave" style=" left:70%; top:93%; position: absolute;">
    <span class="dot"></span>
    <span class="dot"></span>
    <span class="dot"></span>
</div>
