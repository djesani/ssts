<!DOCTYPE html>
<html>
<head>
  <% include partials/header %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css" />
  <link rel="stylesheet" href="/stylesheets/grid-gallery.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<% include partials/menu %>
<% include partials/buttons/goBack %>
<div class="container cont-gal">
  <section class="gallery-block grid-gallery">
      <% if(renderType === 'album' ) { %>
        <!-- <div class="container bg-light "> -->
          <div class="row">&nbsp;</div>
          <div class="events">
              <div class="row upcoming">
                <% galleryOutput.forEach(album => { %>
                <div class="article col-xl-3 col-lg-3 col-md-6 col-sm-12" data-row="1">
                  <!-- <div class="row"> -->
                  <div class="img-fluid scale-on-hover col-sm-12">
                    <a href="<%= galleryRoot %>/<%= album.url %>">
                      <img class="card-img-top"  src="<%= galleryRoot %>/<%= album.url %>?tn=1" alt="<%= album.name %>" /><br/>
                      <div style="text-align: center; background:red; color:black"><%= album.name %></div>
                    </a>
                  </div>
              </div>
              <% }) %>
            </div>
          </div>
        <!-- </div> -->
      <% } %>
      <% if(renderType === 'photo' ) { %>

          <div class="row">
                  <% galleryOutput.forEach(photo => { %>
                    <div class="col-sm-3 item">
                      <a class="lightbox" href="<%= galleryRoot %>/<%= photo.src %>">
                        <img class="img-fluid scale-on-hover" src="<%= galleryRoot %>/<%= photo.src %>" alt="<%= photo.name %>">
                      </a>
                    </div>
                  <% }); %>
          </div>

      <% } %>

  </section>
      </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
  <script>
      baguetteBox.run('.grid-gallery', { animation: 'slideIn'});
  </script>
  <div class="row">&nbsp;</div>
    <% include partials/footer %>
    <% include partials/buttons/scroll %>
</body>
</html>
