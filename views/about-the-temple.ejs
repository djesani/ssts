    <style>
      /* Core theme variables used by timeline/cards */
      :root {
        --bg: #faf8f6;
        --card: #ffffff;
        --ink: #1f2937;
        --muted: #6b7280;
        --accent: #ec7c27;
        --accent-600: #d56514;
        --line: #e5e7eb;
        --ring: rgba(236, 124, 39, .25);
        --hover: #ffcfa8;
        --border: #d1d5db;
        --radius: 16px;
        --shadow: 0 10px 30px rgba(31, 41, 55, .08);
      }

      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, Arial;
        background: var(--bg);
        color: var(--ink);
        line-height: 1.6;
      }

      .wrap {
        max-width: 1100px;
        margin: 0 auto;
        padding: 56px 20px 80px;
      }

      header {
        margin-bottom: 24px;
      }

      h1 {
        margin: 0 0 6px;
        font-size: clamp(1.6rem, 1.2rem + 1.2vw, 2.1rem);
      }

      /* Interactive timeline */
      .timeline {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 40px 1fr;
        gap: 28px;
        list-style: none;
        padding: 0;
      }

      .timeline::before {
        content: "";
        position: absolute;
        top: 0;
        bottom: 0;
        left: calc(50% - 1px);
        width: 2px;
        background: linear-gradient(var(--line), var(--accent) 35%, var(--line));
        border-radius: 2px;
      }

      .milestone {
        position: relative;
      }

      .milestone.left {
        grid-column: 1 / 2;
      }

      .milestone.right {
        grid-column: 3 / 4;
      }

      .milestone::before {
        content: "";
        position: absolute;
        top: 22px;
        width: 22px;
        height: 22px;
        background: #fff;
        border: 3px solid var(--accent);
        border-radius: 999px;
        box-shadow: 0 0 0 6px var(--ring);
        z-index: 2;
        transition: border-color .25s ease, box-shadow .25s ease;
      }

      .milestone.left::before {
        right: -11px;
      }

      .milestone.right::before {
        left: -11px;
      }

      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 18px 20px;
        transition: transform .25s ease, box-shadow .25s ease, background-color .25s ease, border-color .25s ease, padding .25s ease;
      }

      .card .more {
        max-height: 0;
        overflow: hidden;
        opacity: 0;
        transition: max-height .3s ease, opacity .25s ease;
        color: var(--muted);
      }

      .card:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 16px 46px rgba(31, 41, 55, .15);
        background-color: var(--hover);
        border-color: var(--accent-600);
        padding: 22px 22px;
      }

      .card:hover .more {
        max-height: 140px;
        opacity: 1;
      }

      .year {
        display: inline-flex;
        align-items: center;
        gap: .55rem;
        color: var(--accent-600);
        font-weight: 700;
      }

      .year .dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: var(--accent);
        box-shadow: 0 0 0 6px var(--ring);
      }

      .what {
        margin: .35rem 0 .2rem;
        color: var(--ink);
      }

      .muted {
        color: var(--muted);
      }

      .milestone:hover::before {
        border-color: var(--accent-600);
        box-shadow: 0 0 0 8px rgba(236, 124, 39, .18);
      }

      dl,
      ol,
      ul {
        margin-top: 0;
        font-size: 1.2rem;
      }

      /* Responsive */
      @media (max-width: 820px) {
        .timeline {
          grid-template-columns: 20px 1fr;
          gap: 22px;
        }

        .timeline::before {
          left: 10px;
        }

        .milestone.left,
        .milestone.right {
          grid-column: 2 / -1;
        }

        .milestone::before {
          left: 0;
          transform: translateX(-50%);
        }
      }

      /* Reduced motion */
      @media (prefers-reduced-motion: reduce) {
        .card {
          transition: none;
        }

        .card .more {
          transition: none;
        }
      }
    </style>
</head>

