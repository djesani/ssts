<!DOCTYPE html>
<html>

<head>
  <% include partials/header %>

  <script type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
  <% if(renderType === 'photo' ) { %>
  <script src="/galleria/galleria-1.5.7.min.js"></script>
  <script type='text/javascript' src='/javascripts/page.js'></script>
  <% } %>
</head>

<body>
  <% include partials/menu %>

      <% if(renderType === 'empty' ) { %>
      <div class="not-found">
        Unable to load album or photos!
      </div>
      <% } %>

      <% if(renderType === 'album' ) { %>
        <div class="container bg-light">
          <div class="row">&nbsp;</div>
          <div class="events">
              <div class="row upcoming">
                <% galleryOutput.forEach(album => { %>
                <div class="article col-xl-3 col-lg-3 col-md-6 col-sm-12" data-row="1">
                  <!-- <div class="row"> -->
                  <div class="grid-image col-sm-12">
                    <a href="<%= galleryRoot %>/<%= album.url %>">
                      <img class="card-img-top" src="<%= galleryRoot %>/<%= album.url %>?tn=1" alt="<%= album.name %>" /><br/>
                      <div style="text-align: center"><%= album.name %></div>
                    </a>
                  </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
      <% } %>

      <% if(renderType === 'photo' ) { %>
        <div class="container-fluid">
          <div class="galleria" style="width:100%">
        <% galleryOutput.forEach(photo => { %>
        <img src="<%= galleryRoot %>/<%= photo.src %>" alt="<%= photo.name %>">
        <% }); %>
      </div>
    </div>
      <% } %>

      <% include partials/footer %>
</body>

</html>
