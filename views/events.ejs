<!DOCTYPE html>
<html>
  <head>
    <% include partials/header %>
  </head>
  <body>
    <% include partials/menu %>
    <h1><%= title %> Events</h1>
    <br/>
    <% events.forEach(event => { %>
      <hr/>
      <section>
        <h1><%= event.name %></h1>
        <div>
          Start date: <%= new Date(event.startDate).toISOString().split('T')[0] %><br/>
          End date: <%= new Date(event.endDate).toISOString().split('T')[0] %><br/>
          <image src="<%= event.imageurl %>"/>
          <br/><br/>
          <%= event.description %>
      </section>
    <% }); %>
  </body>
  <footer>
    <% include partials/footer %>
  </footer>
</html>
